---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" prefix="og: https://ogp.me/ns#">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="My personal website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/user-square.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lekton:ital,wght@0,400;0,700;1,400&family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
    <meta property="og:title" content="Lucas Gabriel Website" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.lucasmelo.dev" />
    <meta property="og:image" content="https://i.postimg.cc/jS6tSpC9/preview.png" />
    <meta property="og:description" content="My personal website with my personality and projects." />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="h-full min-h-dvh flex flex-col">
    <Header/>
      <div class="h-full flex flex-col">
        <div class="h-full">
          <slot />
          <Footer />
        </div>
      </div>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }
  h2 {
    font-size: 2rem;
    font-weight: 700;
    margin: 0;
  }
  h3 {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
  }
  h4 {
    font-size: 1.2rem;
    font-weight: 700;
    margin: 0;
  }
  h5 {
    margin: 0;
    font-weight: 400;
    font-size: 1rem;
    color: #aaaaaa;
  }
  h6 {
    margin: 0;
    font-weight: 400;
    font-size: 0.9rem;
    color: #aaaaaa;
  }
	html {
    font-family: "Open Sans", sans-serif;
    scroll-padding-top: 95px;
		background: #13151a;
		background-size: 224px;
    color: white;
    height: 100%;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
  p {
    margin: 0;
    font-size: 1.4rem;
    font-weight: 300;
    color: #ffffff;
  }
</style>
